FROM python:3.8.5-slim-buster

RUN apt-get -y update && apt-get -y upgrade && \
    apt-get install --no-install-recommends -y wait-for-it vim gcc libpq-dev libc-dev postgresql-client redis-tools

WORKDIR /app
ENV PYTHONPATH /app/
COPY requirements/ .

RUN pip install -U -r requirements-testing.txt

COPY scripts/* scripts/system/* tests/entrypoint.sh ./
COPY scripts/ci/* ./ci/

RUN mkdir -p /run/secrets
RUN echo -n openslides >/run/secrets/datastore_database_user_file
RUN echo -n openslides >/run/secrets/datastore_database_password_file

ENTRYPOINT ["./entrypoint.sh"]
CMD ["pytest"]
